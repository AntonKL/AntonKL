@import '/jeet/framework'
@import '/jeet/goodies'
@import '/jeet/typography'

@font-face {
    font-family: 'brandon_grotesque_regularRg';
    src: url('/font/brandon_reg-webfont.eot');
    src: url('/font/brandon_reg-webfont.eot?#iefix') format('embedded-opentype'),
         url('/font/brandon_reg-webfont.woff') format('woff'),
         url('/font/brandon_reg-webfont.ttf') format('truetype'),
         url('/font/brandon_reg-webfont.svg#brandon_grotesque_regularRg') format('svg');
    font-weight: normal;
    font-style: normal;

}

@font-face {
    font-family: 'brandon_grotesquebold';
    src: url('/font/brandon_bld-webfont.eot');
    src: url('/font/brandon_bld-webfont.eot?#iefix') format('embedded-opentype'),
         url('/font/brandon_bld-webfont.woff') format('woff'),
         url('/font/brandon_bld-webfont.ttf') format('truetype'),
         url('/font/brandon_bld-webfont.svg#brandon_grotesquebold') format('svg');
    font-weight: normal;
    font-style: normal;

}

body 
  color lighten(base_font_color, 15%)
  word-wrap: break-word;

ul
  padding 0
  margin 0
  list-style none

hr
  border-style none
  border-width 0
  border-top: 1px solid #EEE

h1
  font-family brandon_grotesquebold
  font-size: 1.7em
  text-transform uppercase

p
  margin-bottom 1em

.done
  text-decoration line-through


#container
  center()

header
  text-align center
  hr
    border 5px solid #373737
    margin 1em 0

nav
  margin-bottom 2em
  ul
    text-align center
  li
    display inline
    margin-right 0.5em

article
  border-top 1px solid #EEE
  padding-top 2em
  padding-bottom 2em
  position relative
  #datewrapper
    position absolute
    text-transform uppercase
    font-family brandon_grotesquebold
    left 50%
    top -30px
    width 100px
    padding: 10px 0 10px 0
    margin-left -50px /* Half the width */
    background #FFFFFF
    text-align center
    span
      display block
      line-height 1em

#pagination
  text-align center
  ul,
  li
    display inline

footer
  text-align center
  margin-top 1em
  a
    background url(/img/octocat.svg) no-repeat
    display block
    opacity 0.4
    height 39px
    width 39px
    margin auto
  :hover
    opacity: 1
    transition: 0.5s opacity


// tablet and desktop
bp(768px, mf)

header
  hr
    margin 2em 0
  #logo
    font-size 2.2em


section
  padding-left 40px;

article
  border-top none
  border-left 1px solid
  padding-left 80px
  padding-top 0

  #datewrapper
    left 0
    top -10px

  
endbp()